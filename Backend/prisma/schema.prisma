generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model KudoBoard{
  id Int @id @default(autoincrement())
  imgUrl String
  title String
  category String
  author String
  card KudoCard[]
}

model KudoCard{
  id Int @id @default(autoincrement())
  messsage String
  imgUrl String
  author String
  boardId Int
  board KudoBoard @relation(fields:[boardId], references:[id], onDelete: Cascade)
}

