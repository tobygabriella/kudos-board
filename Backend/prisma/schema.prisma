generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model KudoBoard{
  id Int @id @default(autoincrement())
  imgUrl String
  title String
  category String
  author String
  card KudoCard[]
}

model KudoCard{
  id Int @id @default(autoincrement())
  title String
  description String
  imgUrl String
  author String
  boardId Int
  upvote Int @default(0)
  comments Comment[]
  board KudoBoard @relation(fields:[boardId], references:[id], onDelete: Cascade)
}

model Comment {
  id Int @id @default(autoincrement())
  content String
  author String
  createdAt DateTime @default(now())
  cardId Int
  card KudoCard @relation(fields:[cardId], references:[id], onDelete: Cascade)
}
